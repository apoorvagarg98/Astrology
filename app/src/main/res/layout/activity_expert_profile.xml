<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bgg"
    tools:context=".Activities.ExpertProfile">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="────────────────────────────"

        android:textColor="#4DBFF0"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/experttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Expert Profile" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="────────────────────────────"

        android:textColor="#4DBFF0"

        android:textSize="18sp" />


    <TextView
        android:id="@+id/exprname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="3dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textbox1"
        android:text="Name" />

    <TextView
        android:id="@+id/exprdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textbox2"
        android:text="Dob"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/expremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="3dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textbox1"
        android:text="Email" />

    <TextView
        android:id="@+id/expraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textbox2"
        android:text="Address"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exprpincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textbox1"
        android:text="Postal Address"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exprexperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textbox2"
        android:text="Expertise"
        android:textColor="@color/black"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exprexperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textbox1"
        android:text="Experience"
        android:textColor="@color/black"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expramt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textbox2"
        android:text="Amount to be paid"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />



    <Spinner
        android:id="@+id/expryesno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textbox1"
        android:minHeight="48dp" />


</LinearLayout>